{
	"editor.formatOnSave": true,
	"[markdown]": {
		"editor.wordWrap": "on",
		"editor.codeActionsOnSave": {
			"source.fixAll.markdownlint": "explicit"
		}
	},
	"prettier.documentSelectors": ["**/*.astro"],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"astro", // Enable .astro
		"typescript", // Enable .ts
		"typescriptreact"
	],
	"cSpell.words": [
		"archlinux",
		"bootctl",
		"bootloader",
		"BOOTX",
		"cryptdevice",
		"cryptlvm",
		"cryptsetup",
		"devel",
		"efibootmgr",
		"fdisk",
		"genfstab",
		"grubx",
		"iwctl",
		"luks",
		"lvreduce",
		"mkinitcpio",
		"networkmanager",
		"nvme",
		"pacman",
		"pacstrap",
		"sbctl",
		"shimx",
		"swapfile",
		"swapon",
		"ucode",
		"UEFI",
		"vboxservice",
		"Ventoy",
		"volgroup",
		"wlan",
		"Xorg"
	],
	"cSpell.language": "en-GB"
}
